<Window x:Class="Image2Data.Vues.AddTextDetector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Image2Data.Vues"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Nouveau détecteur de Texte" Height="100" Width="500">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Nom" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="NameBox" Grid.Column="1" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Width="395" Height="25" Text="{Binding Name}"/>

        <Button Grid.Row="1" Grid.Column="1" Content="Ajouter" HorizontalAlignment="Right" Height="25" Width="50" Margin="0,0,5,5" Click="OnAdd"/>
    </Grid>
</Window>
